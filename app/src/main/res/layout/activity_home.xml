<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.hithredin.bohurt.mapper.screen.HomeActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title_date_start"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.badoualy.datepicker.DatePickerTimeline
        android:id="@+id/datepicker_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_date_start" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title_date_end"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        app:layout_constraintTop_toBottomOf="@id/datepicker_start" />

    <com.github.badoualy.datepicker.DatePickerTimeline
        android:id="@+id/datepicker_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_date_end" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datepicker_end" />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/loader_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/map" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@drawable/bg_gradient_top"
        app:layout_constraintTop_toTopOf="@id/map" />

</android.support.constraint.ConstraintLayout>
